<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragRegistro"
        android:name="com.example.imcapplication.RegistroFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:tag="fragContato"/>
    <fragment
        android:name="com.example.imcapplication.CalcularFragment"
        android:id="@+id/fragLista"
        android:tag="fragLista"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="7"/>

</LinearLayout>